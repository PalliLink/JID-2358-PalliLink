<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PalliNet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PalliNet"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Views.MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:Views.LoginPage}"
        Route="LoginPage" />
    <ShellContent 
        Title="Physician Login"
        ContentTemplate="{DataTemplate local:Views.PhysicianLoginPage}"
        Route="PhysicianLogin" />
    <ShellContent
        Title="Patient Login"
        ContentTemplate="{DataTemplate local:Views.PatientLoginPage}"
        Route="PatientLogin" />
    <ShellContent
        Title="Landing"
        ContentTemplate="{DataTemplate local:Views.LandingPage}"
        Route="LandingPage" />

</Shell>
